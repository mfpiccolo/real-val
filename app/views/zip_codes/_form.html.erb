<% content_for :tabbar_title do %>
  New Zip Code
<% end %>

<div class="form-panel clearfix">
  <ul class="breadcrumbs">
    <li><%= link_to "Zip Codes", zip_codes_path %></li>
    <li class="current"><a href="#">New</a></li>
  </ul>
  <%= simple_form_for @zip_code do |f| %>
    <div class="form-group">
      <%= f.input :code, required: true %>
    </div>
    <div class="form-group">
      <%= f.input :area, required: true %>
    </div>
    <div class="form-group">
      <%= f.button :submit, class: "small button radius right" %>
    </div>
  <% end %>
</div>

