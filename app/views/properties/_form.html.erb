<% content_for :tabbar_title do %>
  New Project
<% end %>

<div class="form-panel clearfix">
  <ul class="breadcrumbs">
    <li><%= link_to "Properties", properties_path %></li>
    <li class="current"><a href="#">New</a></li>
  </ul>
  <%= simple_form_for @property do |f| %>
    <div class="form-group">
      <%= f.input :address, required: true %>
    </div>
    <div class="form-group">
      <%= f.input :units, required: true %>
    </div>
    <div class="form-group">
      <%= f.input :sqr_ft, required: true %>
    </div>
    <div class="form-group">
      <%= f.input :listing_price, required: true %>
    </div>
    <div class="form-group">
      <%= f.input :rent_per_month, required: true %>
    </div>
    <div class="form-group">
      <%= f.input :hoa_fee, required: false %>
    </div>
    <div class="form-group">
      <%= f.button :submit, class: "small button radius right" %>
    </div>
  <% end %>
</div>

